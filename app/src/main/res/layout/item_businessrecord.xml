<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_group">




    <ImageView
        android:id="@+id/iv_day"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/day" />

    <!--<TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="2.28"
        android:gravity="center"
        android:textColor="@android:color/white" />-->

    <LinearLayout
        android:layout_toLeftOf="@id/iv_day"
        android:layout_centerVertical="true"
        android:id="@+id/ll_left"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/business_shape"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_left"
                android:layout_width="50dp"
                android:minHeight="50dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:ellipsize = "end"
                android:maxLength="20"
                android:text="又名又名 头发护理dgsgfgfsdgfdgdgfdsgdfggdfsgfsgfsssssggdfssgfsgdsgdfgfdsgfsdgsdfgfdgsd，常见的是修fdvdfgdfag剪头发，简称剪发，。"/>

            <ImageView
                android:id="@+id/iv_left"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </LinearLayout>



        <View
            android:layout_width="20dp"
            android:layout_height="2dp"
            android:background="@color/colorBackGround"/>

    </LinearLayout>


    <LinearLayout
        android:layout_toRightOf="@id/iv_day"
        android:layout_centerVertical="true"
        android:id="@+id/ll_right"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="20dp"
            android:layout_height="2dp"
            android:background="@color/colorBackGround"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/business_shape"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_right"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:textSize="10sp"
                android:maxLength="20"
                android:ellipsize="end"
                android:text="又名 头发护理，常见fsdfdsfdsadsffsaf的是修剪头发，简称剪发，grdfgfdsgfdg。"/>

            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </LinearLayout>





    </LinearLayout>



</RelativeLayout>